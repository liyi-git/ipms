		<!-- :::::::::::::::: maven插件version :::::::::::::::::::::: -->
		<release-plugin.version>2.4.1</release-plugin.version>
		<surefire-plugin.version>2.16</surefire-plugin.version>
		<eclipse-plugin.version>2.9</eclipse-plugin.version>
		<jar-plugin.version>2.4</jar-plugin.version>
